<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginDispatch">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/register" />

    <ImageView
        android:id="@+id/login_icon"
        android:layout_width="233dp"
        android:layout_height="291dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="39dp"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/ambulance_login"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/login_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:background="@drawable/custom_button"
        android:padding="25dp"
        android:text="Ambulance Login"
        android:textColor="#154AF1"
        android:textSize="15sp" />

    <Button
        android:id="@+id/police_login"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/ambulance_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:background="@drawable/custom_button"
        android:padding="25dp"
        android:text="Police Login"
        android:textColor="#154AF1"
        android:textSize="15sp" />


    <Button
        android:id="@+id/fireman_login"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/police_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:background="@drawable/custom_button"
        android:padding="25dp"
        android:text="Fireman Login"
        android:textColor="#154AF1"
        android:textSize="15sp" />



</RelativeLayout>